html,
body {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-family: 'Roboto', sans-serif;
  font-size: 14px;
  background-color: #eeeeee;
  color: #949494;
}

* {
  box-sizing: border-box; 
}
li{
  list-style: none;
}
a {
  text-decoration: none;
}
.bordertable{
  padding-left: 30px
  th{
    color: #ccc
    border: dashed 1px consola
    padding-left: 10px
    padding-right: 10px
    text-align: center
  }
  td{
     border: dashed 1px consola
     padding-left: 10px
  }
}
//header
#comand{
  color: paper
  display: grid
  float: right 
  height 50px
  grid-template-columns: 150px  auto 
  width 250px
  span{
    margin-top: 10px
    font-size: 18px
  }
}
#comandoOFF{
  border: solid 3px red !important
}
#comandoON{
  border: solid 3px consola
}
#comandoOFF,
#comandoON{
  background: color_primario
  border-radius: 2px
  color: paper 
  display: none
  float: right;
  margin: 10px
}
.ComanON{
  display: block !important
}
.ComanOFF{
  display: none
}
//::END fin de HEAD
#app{
  display               : grid;
  grid-template-columns : auto;
  grid-template-rows    : 50px auto;
  height                : 100%;
  width                 : 100%;
}
.Alis{
  color #000
  margin-left: -5px
  width 100%
  .message{
    background: rgba(247, 11, 117, 0.369)
    padding: 2px 5px
    border-radius: 5px
  }
}
.User{
  color #000 
  margin-left -30px
  width 100%
  .message{
    background    : #2c90395e
    padding       : 2px 5px
    border-radius : 5px
  }
}