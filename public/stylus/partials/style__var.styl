//@Media consulta puntos de interrupción
//---------------[width]----------------
	// Extra small screen / phone-min
	$screen-ms =320px
	
	// Extra small screen / phone
	$screen-xs =480px
	
	// Small screen / tablet
	$screen-sm =768px
	
	// Medium screen / desktop
	$screen-md =992px
	
	// Large screen / wide desktop
	$screen-lg =1200px
	
	// Large screen / wide TV
	$screen-xl =1600px
//---------------[height]----------------
	// Extra small screen / phone-mediano*
	$Hscreen-ms =400px

	// Extra small screen / phone-mediano*
	$Hscreen-s =640px	

	// Extra small screen / phone
	$Hscreen-xs =720px

	// Small screen / tablet
	$Hscreen-sm =800px
//@END Media consulta puntos de interrupción




//[-- No pueden haber guiones en los nombres --]
//@MEDIA QUERY screen options
//---------------[width]----------------
	$mss    = "max-width:" + $screen-ms
	$xs     = "max-width:" + $screen-xs
	$sm     = "max-width:" + $screen-sm + ") and (min-width: " + $screen-xs
	$smdesc = "max-width:" + $screen-sm
	$smasc  = "min-width:" + $screen-sm
	$md     = "max-width:" + $screen-md + ") and (min-width: " + $screen-sm
	$mddesc = "max-width:" + $screen-md
	$mdasc  = "min-width:" + $screen-md
	$lg     = "min-width:" + $screen-lg
	$lgdesc = "max-width:" + $screen-lg
//---------------[height]----------------
	$Hmss =	"max-height:" + $Hscreen-ms
	$Hms =	"max-height:" + $Hscreen-s

//@END MEDIA QUERY screen options


