#section2{
    background: color_primario
    display: grid;
    font-family: 'Orbitron', sans-serif;
    grid-template-rows: auto 40% 40px
    grid-column-start: 2
    grid-column-end: 3
    height: -webkit-fill-available;
    max-height: 94vh;
    @media ({$xs}) {
      display none;
      grid-column-start: 1
      grid-column-end: 2
      grid-row-start: 2
      grid-row-end: 3
      grid-template-rows: calc(98vh - 139px) 40px;
      height: calc(100% - 28px);
      max-height: 100vh;
    }
    @media({$Hmss}){
      grid-template-rows: calc(99vh - 139px) 40px; 
      height: 370px;
    }
    @media (max-width: 480px) and (max-height: 640px){
      grid-template-rows: calc(99vh - 139px) 40px;
    }
    
}
