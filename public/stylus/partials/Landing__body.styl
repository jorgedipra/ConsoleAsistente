#app{
  display               : grid;
  grid-template-columns : auto;
  grid-template-rows    : 50px auto;
  height                : 100%;
  width                 : 100%;
  @media({$Hms}){
    grid-template-rows    : 30px auto;
  }
  @media({$Hmss}){
    height 400px;
  }
}
//2
#body{
    background            :linear-gradient(45deg, #212121 15px, rgba(255, 255, 255, 0.08) 15px, #212121 16px), linear-gradient(-45deg, #212121 15px, rgba(255, 255, 255, 0.08) 15px, #212121 16px);
    display               : grid;
    grid-template-columns : 80% auto
    grid-template-rows    : auto
    grid-row-start        : 2;
    grid-row-end          : 3;
    grid-column-start     : 1
    grid-column-end       : 2
    @media ({$lgdesc}) {
      grid-template-columns : auto 260px
    }
    @media ({$xs}) {
      grid-template-columns : auto
      grid-template-rows    : 70px auto
    }
  #tab{
    position absolute
    width: calc(100% - 260px);
    @media ({$xs}) {
      background: #151414;
      width: 100%;
    }
    h4{
      @media ({$xs}) {
        text-align: left!important
        padding-left: 2px;
      }
      @media ({$mss}) {
        display: none;
      }
    }
    #estado {
    position: fixed;
    top: 50px;
    right: 0;
    background: linear-gradient(45deg, #212121 15px, rgba(255, 255, 255, 0.08) 15px, #212121 16px), linear-gradient(-45deg, #212121 15px, rgba(255, 255, 255, 0.08) 15px, #212121 16px);
    display: none;
    float right
    grid-template-columns : 60px auto 
    height 40px
    padding-top: 2px
    padding-left: 15px   
    opacity: 0.75;
    width 50%
    z-index: 1;
    -webkit-clip-path: polygon(0 0, 100% 1%, 100% 100%, 16% 100%, 0% 50%); 
    #title{
      color consola;
      font-size: 12px;
      }
    span{
      color: #00bebe;
      font-size: x-small;
      font-family: 'Orbitron', sans-serif;
      text-shadow:1px 1px 13px rgba(25, 210, 100, 0.6)
    }
    @media ({$xs}) {
      display: grid;
      top: 50px;
    }
    @media ({$mss}) {
      height 20px
      width 100%;
      margin-top: 0px;
      -webkit-clip-path: inset(0 0 0 0);
    } 
    @media({$Hmss}){
      display: grid;
    }
    @media (max-width: 480px) and (max-height: 640px){
      top: 31px;
    }
  }
  #pestanas{
    @media ({$mss}) {
      top:35px
    }
  }
  }//END::tab
}
