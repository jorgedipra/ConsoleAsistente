#body{
    background            :paper;
    display               : grid;
    grid-template-columns : 80% auto
    grid-template-rows    : auto
    grid-row-start        : 2;
    grid-row-end          : 3;
    grid-column-start     : 1
    grid-column-end       : 2
    @media ({$lgdesc}) {
      grid-template-columns : auto 260px
    }
}
//2.1
code{
  color: consola !important
  grid-column-start: 1
  grid-column-end: 2
  width 100%;
  height 100%
  background: #000
  font-size: 25px
}
//2.2
#section2{
    background: color_primario
    display: grid;
    grid-template-rows: auto 40% 40px
    grid-column-start: 2
    grid-column-end: 3
    height: -webkit-fill-available;
}
//2.2.1
#descrip{
    grid-row-start  : 1;
    grid-row-end    : 2;
    padding: 5%;
    h2{
      color: consola
    }
    li{
      color: paper
    }
}
//2.2.2
#historial{
    background: rgba(255, 255, 255, 0.8)
    border: solid 1px #000
    height 100%
    overflow: auto
    width 100%;
  #msginicial{
    height: 200px;
    display: -webkit-box;
    text-align: center
  }
  #User{
      li{
        display: grid
        grid-template-rows: auto
        grid-template-columns:  30px auto
        .nombre{
          background: paper
          border: solid 1px #666
          border-radius: 100%
          color: #666
          font-weight: 800;
          height 30px
          text-align: center
          margin-left: -5px
          margin-right: 5px
          padding: 4px
        }
      }   
    }
}
//2.2.3
#get{
    display grid
    grid-template-columns: 80% auto 
    #actividad{
        background: color_primario 
        color: paper 
        border: solid 1px rgba(255, 255, 255, 0.2)
        padding-left: 10px
    }      
}
#micro,
#enviar{
  background: paper 
  border: solid 1px consola
  color: color_primario
  display none 
}
.micro-in{
  display block !important
}
.micro-on{
  display: none
}
.enviar-in{
  display: block !important
}
.enviar-on{
  display none  
}